generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            String    @default(cuid()) @id
  name          String
  username      String    @unique
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
}

model ServicePost {
  id              String    @default(cuid()) @id
  title           String
  description     String 
  tags            String
  price           Decimal
  time            Decimal
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")
}

model JobPost {
  id              String    @default(cuid()) @id
  title           String
  description     String 
  tags            String
  price           Decimal
  time            Decimal
  createdAt       DateTime  @default(now()) @map(name: "created_at")
  updatedAt       DateTime  @updatedAt @map(name: "updated_at")
}